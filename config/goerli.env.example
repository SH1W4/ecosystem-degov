# 🌐 Ecosystem Degov - Goerli Testnet Configuration
# Copie este arquivo para .env e configure suas chaves

# 🔗 Network URLs (Infura/Alchemy)
GOERLI_URL=https://goerli.infura.io/v3/YOUR_INFURA_PROJECT_ID
# Alternativa: https://eth-goerli.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# 🔑 Private Key (SEM o 0x no início)
PRIVATE_KEY=your_private_key_without_0x_prefix

# 🔍 Etherscan API Key (para verificação de contratos)
ETHERSCAN_API_KEY=your_etherscan_api_key

# ⛽ Gas Settings
GAS_PRICE=20000000000
GAS_LIMIT=8000000

# 📊 Gas Reporter
REPORT_GAS=true

# 🎯 Deployment Settings
DEPLOYER_ADDRESS=your_wallet_address
NETWORK_ID=5
CHAIN_ID=5

# 📝 Contract Addresses (serão preenchidos após deploy)
GST_TOKEN_ADDRESS=
AET_TOKEN_ADDRESS=
ECT_TOKEN_ADDRESS=
CCR_TOKEN_ADDRESS=
ECS_TOKEN_ADDRESS=
ECR_TOKEN_ADDRESS=
EST_TOKEN_ADDRESS=
EGM_TOKEN_ADDRESS=

# 🚀 Deployment Info
DEPLOYMENT_TIMESTAMP=
DEPLOYMENT_TRANSACTION_HASH=
